{% extends 'ONGRAdminBundle::layout.html.twig' %}

{% block body_attributes %}ng-app="ongr.settings"{% endblock %}
{% block wrapper_attributes %}ng-controller="settings"{% endblock %}

{% block main %}
    <div class="container-fluid">
        {% verbatim %}
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Settings</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="(settingId, row) in settings">
                            <td>{{ row.name }}</td>
                            <td>{{ row.description }}</td>
                            <td>{{ row.type }}</td>
                            <td width="35%">
                                <div ng-switch="row.type" class="container" style="word-break:break-all">
                                    <div ng-switch-when="boolean">
                                        <div class="btn-group btn-group-sm">
                                            <label class="btn btn-default" ng-class="{ 'btn-primary' : row.data.value }" ng-model="row.data.value" btn-radio="true" ng-click="saveStatus($event, row)" uncheckable>On</label>
                                            <label class="btn btn-default" ng-class="{ 'btn-primary' : !row.data.value }" ng-model="row.data.value" btn-radio="false" ng-click="saveStatus($event, row)" uncheckable>Off</label>
                                        </div>
                                    </div>
                                    <div ng-switch-when="array" collapse collapse-data="row.data.value"></div>
                                    <div ng-switch-when="object" collapse collapse-data="row.data.value"></div>
                                    <div ng-switch-default inline setting="row"></div>
                                </div>
                            </td>

                            <td width="25%">
                                <a href="{{ editLink(row) }}" class="btn btn-primary btn-xs">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>
                                <a href="#" class="btn btn-primary btn-xs" ng-click="duplicate(settingId)">
                                    <span class="glyphicon glyphicon-transfer"></span>
                                </a>
                                <a href="#" class="btn btn-danger btn-xs" really-message="Are you sure?" really-click="remove(settingId, row)">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        {% endverbatim %}
        {% block pager %}
            {% if filters.pager is defined %}
                <div class="pull-right">{{ paginate(filters.pager.pager, 'ongr_admin_settings_list', filters.pager.urlParameters) }}</div>
                <div class="clearfix"></div>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}

{% block admin_javascripts %}
    {% set profile = filters.profile.state.value %}
    <script type="text/javascript">
        var setting = {{ data|json_encode|raw }},
            profiles = {{ filters.profile.choices|json_encode|raw }},
            currentProfile = '{{ filters.profile.state.value|raw }}';
    </script>
    <script src="{{ asset('bundles/ongradmin/js/controller/SettingsController.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/controller/modal/DuplicateModalController.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/controller/modal/AddSettingModalController.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/filter/ObjectLimitToFilter.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/directive/InlineDirective.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/directive/ReallyClickDirective.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/directive/CollapseDirective.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/utils/Asset.js') }}"></script>
    <script src="{{ asset('bundles/ongradmin/js/app-settings.js') }}"></script>
    {{ parent() }}
{% endblock %}
